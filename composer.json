{
    "name": "rips/rips-cli",
    "license": "BSD-3-Clause",
    "type": "project",
    "require": {
        "php": ">=7.1.3",
        "ext-json": "*",
        "sensiolabs/security-checker": "^5.0",
        "rips/connector-bundle": "~3.2",
        "symfony/console": "4.3.*",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "4.3.*",
        "symfony/process": "4.3.*",
        "symfony/yaml": "4.3.*",
        "symfony/dotenv": "4.3.*"
    },
    "require-dev": {
        "phpmetrics/phpmetrics": "^2.4",
        "phpstan/phpstan": "^0.11",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "platform": {
            "php": "7.1.3"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "security-checker security:check": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.3.*"
        }
    }
}
